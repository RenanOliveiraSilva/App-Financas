generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String   @default("") 
  email    String   @unique
  password String
  createdAt DateTime @default(now())

  cycleStartDay Int?

  incomes   Income[]
  expenses  Expense[]
}

model Income {
  id          Int      @id @default(autoincrement())
  description String   @db.VarChar(255)
  amount      Float
  date        DateTime @default(now()) // Para receitas vari√°veis
  type        String   @default("fixed") // fixed ou variable
  userId      Int
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Expense {
  id                 Int       @id @default(autoincrement())
  description        String    @db.VarChar(255)
  amount             Float
  date               DateTime
  userId             Int
  cycleStartDay      Int?
  expenseType        String    // 'unique', 'installment', 'recurring'
  installments       Int?      // Total de parcelas, apenas para 'installment'
  currentInstallment Int?      // Parcela atual, apenas para 'installment'
  recurring          Boolean?  // Indica se a despesa se repete automaticamente
  User               User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}